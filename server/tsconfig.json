{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "lib": [
            "es6",
            "dom",
            "ES2022"
        ],
        "outDir": "build",
        "rootDir": ".",
        "strict": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "**/*",
        "package.json"
    ],
    "exclude": ["node_modules", "build"]
}

